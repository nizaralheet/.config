[colors]
	background = "{color1}"
	foreground = "#ffffff"

[global]
    ### Display ###
    hight = auto
    width = 500 

    origin = bottom-right
    offset = 17x17
    corner_radius = 8
    monitor = 0
    follow = mouse
    
    indicate_hidden = no
    shrink = yes
    transparency = 0
    separator_height = 3
    padding = 8
    horizontal_padding = 10
    frame_width = 0

    frame_color = "{color7}"
    separator_color = auto
    sort = yes
    idle_threshold = 120

    ### Text ###
    font = Iosevka Nerd Font Mono 13
    line_height = 3

    markup = full

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s </b>\n%b"
    alignment = left
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 150
    icon_path =.local/share/icons/flattrcolor/status/24/:.local/share/icons/flattrcolor/devices/48/:.local/share/icons/flattrcolor/apps/scalable/:.local/share/icons/flattrcolor/actions/scalable/


    ### History ###
    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###
    dmenu = /usr/bin/rofi -show run -p dunst:
    browser = /var/lib/flatpak/exports/bin/com.brave.Browser
    always_run_script = true
    title = Dunst
    class = Dunst
    force_xinerama = false
    timeout=60
[experimental]
    per_monitor_dpi = false

[urgency_low]
frame_width =0
    timeout = 10

[urgency_normal]
frame_width = 0 
    timeout = 10

[urgency_critical]
    frame_color = "{color15}"
    timeout = 0

